<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/preferenceKey_wordDisplayTimeMillis"
        android:title="@string/preferenceTitle_wordDisplayTimeMillis"
        android:numeric="integer"
        android:defaultValue="@integer/preferenceDefault_wordDisplayTimeMillis"
        />
    <EditTextPreference
        android:key="@string/preferenceKey_pauseBetweenWordsMillis"
        android:title="@string/preferenceTitle_pauseBetweenWordsMillis"
        android:numeric="integer"
        android:defaultValue="@integer/preferenceDefault_pauseBetweenWordsMillis"
        />
    <EditTextPreference
        android:key="@string/preferenceKey_wordsSequenceLength"
        android:title="@string/preferenceTitle_wordsSequenceLength"
        android:numeric="integer"
        android:defaultValue="@integer/preferenceDefault_wordsSequenceLength"
        />
    <EditTextPreference
        android:key="@string/preferenceKey_dictionary"
        android:title="@string/preferenceTitle_dictionary"
        android:defaultValue="@string/preferenceDefault_dictionary"
        />
</PreferenceScreen>
